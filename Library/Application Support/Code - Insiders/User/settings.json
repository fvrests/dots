{
  // ui-level changes:
  // - view -> toggle centered layout to 'on'
  // - explorer -> ... (views and more actions) -> uncheck all

  // theme
  "workbench.colorTheme": "Ros√© Pine",
  "workbench.iconTheme": "rose-pine-icons",

  // font
  "editor.fontFamily": "'Cartograph CF', 'SF Mono', 'SFMono-Regular', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontWeight": "700",
  "editor.fontSize": 13,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontSize": 12,
  "workbench.fontAliasing": "auto",

  // line height
  "editor.lineHeight": 26,
  "terminal.integrated.lineHeight": 1.15,

  // layout
  "editor.padding.top": 26,
  "editor.padding.bottom": 26,
  "workbench.tree.indent": 14,
  "editor.tabSize": 4,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,

  // zen mode
  "zenMode.hideStatusBar": false,
  "zenMode.fullScreen": false,
  "zenMode.restore": true,
  "zenMode.hideTabs": false,

  // turn off / hide unwanted features
  "breadcrumbs.enabled": false,
  "editor.folding": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "explorer.openEditors.visible": 0,
  "scm.diffDecorationsGutterVisibility": "hover",
  "workbench.editor.showIcons": false,
  "workbench.tips.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.lightbulb.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // hide indent guides
  // "editor.guides.indentation": false,
  // "editor.guides.highlightActiveIndentation": false
  "workbench.colorCustomizations": {
    // hide overview ruler
    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.border": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000",
    "editorOverviewRuler.commonContentForeground": "#0000",
    "editorOverviewRuler.currentContentForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    "editorOverviewRuler.errorForeground": "#0000",
    "editorOverviewRuler.findMatchForeground": "#0000",
    "editorOverviewRuler.incomingContentForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.rangeHighlightForeground": "#0000",
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    "editorOverviewRuler.warningForeground": "#0000",
    "editorOverviewRuler.wordHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    // dim indent guides
    "editorIndentGuide.background": "#0000",
    "editorIndentGuide.activeBackground": "#65618e4d"
  },

  // editor behavior
  "debug.showInlineBreakpointCandidates": false,
  "debug.allowBreakpointsEverywhere": false,
  "editor.cursorBlinking": "solid",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "liveshare.presence": true,
  "liveshare.autoShareServers": false,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "lib/**": true,
    "dist/**": true
  },
  "vim.handleKeys": {
    "<c-d>": true
  },
  "vim.vimrc.enable": true,
  "workbench.startupEditor": "none",
  "window.openWithoutArgumentsInNewWindow": "on",
  "workbench.sideBar.location": "left",

  // limit open editors
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 4,

  // formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // language-specific
  "css.validate": false,
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "typescript.autoClosingTags": false,
  "volar.codeLens.pugTools": false,

  // italics override for non-italic themes
  "editor.tokenColorCustomizations": {
    "comments": {
      "fontStyle": "italic"
    },
    "support.function": {
      "fontStyle": "italic"
    },
    "punctuation.definition.comment": {
      "fontStyle": "italic"
    },
    "entity.other.inherited-class": {
      "fontStyle": "italic"
    },
    "entity.other.attribute-name": {
      "fontStyle": "italic"
    },
    "variables": {
      "fontStyle": "italic"
    },
    "textMateRules": [
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // todohighlight extension settings
  "todohighlight.isCaseSensitive": false,
  "todohighlight.keywords": [
    {
      "text": "todo:",
      "color": "#1f1d2e",
      "backgroundColor": "#ebbcba99",
      "border": "2px solid var(--vscode-editor-background)",
      "borderRadius": "6px",
      "isWholeLine": true
    },
    {
      "text": "note:",
      "color": "#1f1d2e",
      "backgroundColor": "#f6c17799",
      "border": "2px solid var(--vscode-editor-background)",
      "borderRadius": "6px",
      "isWholeLine": true
    },
    {
      "text": "fixme:",
      "color": "#1f1d2e",
      "backgroundColor": "#c4a7e799",
      "border": "2px solid var(--vscode-editor-background)",
      "borderRadius": "6px",
      "isWholeLine": true
    },
    {
      "text": "bug:",
      "color": "#1f1d2e",
      "backgroundColor": "#9ccfd899",
      "border": "2px solid var(--vscode-editor-background)",
      "borderRadius": "6px",
      "isWholeLine": true
    },
    {
      "text": "hack:",
      "color": "#1f1d2e",
      "backgroundColor": "#31748f99",
      "border": "2px solid var(--vscode-editor-background)",
      "borderRadius": "6px",
      "isWholeLine": true
    },
    {
      "text": "xxx:",
      "color": "#1f1d2e",
      "backgroundColor": "#eb6f9299",
      "border": "2px solid var(--vscode-editor-background)",
      "borderRadius": "6px",
      "isWholeLine": true
    }
  ]
}
