{
  // theme & typography
  "workbench.colorTheme": "Rosé Pine",
  "workbench.iconTheme": "Rosé Pine Icons",
  "editor.fontFamily": "'Dank Mono', 'SF Mono', 'SFMono-Regular', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "600",
  "editor.fontSize": 14,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontSize": 13,
  "workbench.fontAliasing": "auto",
  "editor.lineHeight": 26,
  "terminal.integrated.lineHeight": 1.15,
  "editor.tokenColorCustomizations": {
    "comments": {
      "fontStyle": "italic"
    },
    "variables": {
      "fontStyle": "italic"
    }
  },
  // layout
  "editor.padding.top": 26,
  "editor.padding.bottom": 26,
  "workbench.tree.indent": 14,
  "editor.tabSize": 4,
  // change appearance settings
  "editor.wordWrap": "on",
  "scm.diffDecorationsGutterVisibility": "hover",
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.restore": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  // turn off / hide unwanted features
  "breadcrumbs.enabled": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 0,
  "workbench.editor.showIcons": false,
  "workbench.tips.enabled": false,
  "editor.occurrencesHighlight": false,
  "git.decorations.enabled": false,
  "editor.lightbulb.enabled": false,
  "editor.parameterHints": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorCustomizations": {
    "editorError.foreground": "#feb2b2",
    "editorWarning.foreground": "#fbd38d",
    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.border": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000",
    "editorOverviewRuler.commonContentForeground": "#0000",
    "editorOverviewRuler.currentContentForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    "editorOverviewRuler.errorForeground": "#0000",
    "editorOverviewRuler.findMatchForeground": "#0000",
    "editorOverviewRuler.incomingContentForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.rangeHighlightForeground": "#0000",
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    "editorOverviewRuler.warningForeground": "#0000",
    "editorOverviewRuler.wordHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    "scrollbarSlider.activeBackground": "#0000",
    "scrollbarSlider.background": "#0000",
    "scrollbarSlider.hoverBackground": "#0000",
    "scrollbar.shadow": "#0000",
    // theme settings
    "tab.border": "#0000",
    "editorIndentGuide.background": "#0000",
    "editorIndentGuide.activeBackground": "#65618e4d"
  },
  // formatting / editor behavior
  "editor.formatOnSave": true,
  "workbench.startupEditor": "none",
  "git.autofetch": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "explorer.confirmDelete": false,
  "vim.handleKeys": {
    "<D-c>": false
  },
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "vetur.validation.template": false,
  "css.validate": false,
  "window.openWithoutArgumentsInNewWindow": "on",
  "explorer.confirmDragAndDrop": false,
  "workbench.statusBar.visible": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.zoomLevel": 0
}
