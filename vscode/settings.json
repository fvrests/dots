{
  "workbench.colorTheme": "Ros√© Pine Dawn",
  "workbench.iconTheme": "rose-pine-icons",
  "editor.fontFamily": "'Cartograph CF', 'SF Mono', 'SFMono-Regular', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontWeight": "700",
  "editor.fontSize": 13,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontSize": 12,
  "workbench.fontAliasing": "auto",
  "editor.lineHeight": 26,
  "terminal.integrated.lineHeight": 1.15,
  // italics even on non-italic themes
  "editor.tokenColorCustomizations": {
    "comments": {
      "fontStyle": "italic"
    },
    "support.function": {
      "fontStyle": "italic"
    },
    "punctuation.definition.comment": {
      "fontStyle": "italic"
    },
    "entity.other.inherited-class": {
      "fontStyle": "italic"
    },
    "entity.other.attribute-name": {
      "fontStyle": "italic"
    },
    "variables": {
      "fontStyle": "italic"
    },
    "textMateRules": [
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "meta.tag.other.html",
        "settings": {
          "foreground": "#6E6A86"
        }
      },
      {
        "scope": "meta.property-name.css",
        "settings": {
          "foreground": "#9CCFD8"
        }
      },
      {
        "scope": "meta.property-value.css",
        "settings": {
          "foreground": "#F6C177"
        }
      },
      {
        "scope": "meta.directive.vue",
        "settings": {
          "foreground": "#C4A7E7",
          "fontStyle": "italic"
        }
      }
    ]
  },
  // todohighlight extension settings
  "todohighlight.isCaseSensitive": false,
  "todohighlight.keywords": [
    {
      "text": "todo:",
      "color": "#1f1d2e",
      "backgroundColor": "#ebbcba99",
      "border": "2px solid #ebbcba99",
      "borderRadius": "4px",
      "isWholeLine": true
    },
    {
      "text": "note:",
      "color": "#1f1d2e",
      "backgroundColor": "#f6c17799",
      "border": "2px solid #f6c17799",
      "borderRadius": "4px",
      "isWholeLine": true
    }
  ],
  // layout
  "editor.padding.top": 26,
  "editor.padding.bottom": 26,
  "workbench.tree.indent": 14,
  "editor.tabSize": 4,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  // change appearance settings
  "editor.wordWrap": "on",
  "scm.diffDecorationsGutterVisibility": "hover",
  "zenMode.hideStatusBar": false,
  "zenMode.fullScreen": false,
  "zenMode.restore": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  // turn off / hide unwanted features
  "breadcrumbs.enabled": false,
  "editor.folding": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "explorer.openEditors.visible": 0,
  "workbench.editor.showIcons": false,
  "workbench.tips.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.lightbulb.enabled": false,
  "editor.parameterHints": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorCustomizations": {
    "editorError.foreground": "#feb2b2",
    "editorWarning.foreground": "#fbd38d",
    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.border": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000",
    "editorOverviewRuler.commonContentForeground": "#0000",
    "editorOverviewRuler.currentContentForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    // "editorOverviewRuler.errorForeground": "#0000",
    // "editorOverviewRuler.findMatchForeground": "#0000",
    "editorOverviewRuler.incomingContentForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.rangeHighlightForeground": "#0000",
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    // "editorOverviewRuler.warningForeground": "#0000",
    // "editorOverviewRuler.wordHighlightForeground": "#0000",
    // "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    "scrollbarSlider.activeBackground": "#0000",
    "scrollbarSlider.background": "#0000",
    "scrollbarSlider.hoverBackground": "#0000",
    "scrollbar.shadow": "#0000",
    // theme settings
    "tab.border": "#0000",
    // "editorIndentGuide.background": "#0000",
    "editorIndentGuide.activeBackground": "#65618e4d"
  },
  // formatting / editor behavior
  "editor.formatOnSave": true,
  "debug.showInlineBreakpointCandidates": false,
  "debug.allowBreakpointsEverywhere": false,
  "workbench.startupEditor": "none",
  "git.autofetch": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "explorer.confirmDelete": false,
  "vim.vimrc.enable": true,
  "vim.handleKeys": {
    "<c-d>": true
  },
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "lib/**": true,
    "dist/**": true
  },
  "css.validate": false,
  "vetur.validation.style": false,
  "window.openWithoutArgumentsInNewWindow": "on",
  "explorer.confirmDragAndDrop": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 3,
  "vetur.validation.template": false,
  "editor.cursorBlinking": "solid",
  "workbench.sideBar.location": "right",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "liveshare.presence": true,
  "volar.codeLens.pugTools": false
}
